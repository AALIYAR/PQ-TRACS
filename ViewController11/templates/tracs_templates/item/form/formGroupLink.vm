  #if ($JHS.current.item.linkGroupDisplay=='newTab')

    <af:${elemName} #ITEM_ID_IN_FORM() #BUTTON_TEXT_IN_FORM_WITH_PROP(${propName})
          #ITEM_RENDERED_IN_FORM() #ITEM_PARTIAL_TRIGGERS() #JHS_PROP("icon" $JHS.current.item.icon)
